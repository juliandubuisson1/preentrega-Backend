
<div class="container mt-4">
    <div class="row">
        <!-- Formulario de agregado de productos -->
        <div class="col-md-3 px-6">
            <h1>Agregar Producto</h1>
            <div class="py-5">
                <form id="productForm">
                    <div class="form-group">
                        <label for="title">Título:</label>
                        <input type="text" class="form-control" id="title" name="title" required>
                    </div>
                    <div class="form-group">
                        <label for="description">Descripción:</label>
                        <input type="text" class="form-control" id="description" name="description" required>
                    </div>
                    <div class="form-group">
                        <label for="price">Precio:</label>
                        <input type="number" class="form-control" id="price" name="price" required>
                    </div>
                    <div class="form-group">
                        <label for="thumbnail">Imagen:</label>
                        <input type="text" class="form-control" id="thumbnail" name="thumbnail" required>
                    </div>
                    <div class="form-group">
                        <label for="code">Código:</label>
                        <input type="text" class="form-control" id="code" name="code" required>
                    </div>
                    <div class="form-group">
                        <label for="stock">Stock:</label>
                        <input type="text" class="form-control" id="stock" name="stock" required>
                    </div>
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input" id="status" name="status" checked>
                        <label class="form-check-label" for="status">Activo</label>
                    </div>
                    <button type="submit" class="btn btn-primary">Agregar Producto</button>
                </form>
            </div>

            <h2>Eliminar Producto</h2>

            <form id="deleteProductForm">
                <div class="form-group">
                    <label for="productId">ID del Producto:</label>
                    <input type="number" class="form-control" id="productId" name="productId" required>
                </div>
                <button type="submit" class="btn btn-danger mt-3">Eliminar Producto</button>
            </form>
        </div>

        <!-- Lista de Productos -->
        <div class="col-md-9 px-6">
            <h2>Lista de Productos</h2>
            <div class="card-columns row row-cols-3" id="productList">
            </div>
        </div>
    </div>
</div>


<script src="/socket.io/socket.io.js"></script>;

